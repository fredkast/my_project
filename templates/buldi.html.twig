<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}{#{{ encore_entry_link_tags('app') }}#}{% endblock %}
        {% block javascripts %}{#{{ encore_entry_script_tags('app') }}#}{% endblock %}
     
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Courgette&family=Open+Sans+Condensed:wght@300;700&family=Oswald:wght@500&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

        <link rel="styleSheet" href="{{asset('css/Style.css')}}" type="text/css" />
    </head>
    <body>
        <header>
            <a href="/" ><h1>Mon projet Immo</h1></a>
            <div class="navigation">
                <div class="menu">
                    <ul>
                        <li><a href="/" class="bouton">Accueil</a></li>                   
                        <li><a href="/comment_ca_marche" class="bouton">Comment ça marche?</a></li>
                        <li><a href="/pourquoi" class="bouton">Pourquoi utiliser Mon pojet Immo</a></li>
                        <li><a href="/contact" class="bouton">Contact</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="/devis" class="bouton">Gestion des devis</a></li>
                        {% endif %}
                        
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="/user" class="bouton">Gestion des utilisateurs</a></li>
                        {% endif %}
                    </ul>
                </div>    
                <ul>
                    {% if app.user %}
                        <p>Bonjour <b>{{ app.user.prenom }}</b></p>
                        <li><a href="/user/{{app.user.id}}" class="bouton">Mon profil</a></li>
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="/devis/mes_devis" class="bouton">Mes devis</a></li>
                    {% endif %}    
                        <li><a href="/logout">Se déconnecter</a></li>
					{% else %}
						<li><a href="/login">Se connecter</a></li>
                        <li><a href="/register">Créer un compte</a></li>
			        {% endif %}
                    <li><a href="/pro">Espace PRO</a></li>
                    
                    
                    
                </ul>
             </div>
        </header>
        <main>
            <div class="container">
            {# Message Flash #}
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </main>
        
        <footer>
            <div class="copyright">
               <li><a href="/mentions_legales" class="bouton">Mentions legales</a></li>
                <p>Copyright</p>
            </div>
        </footer>
    </body>
</html>
