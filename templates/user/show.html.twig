{% extends "buldi.html.twig" %}
{% block body %}
<!DOCTYPE html>

<title>User</title>
    <h1>Bienvenu {{ user.prenom}}</h1>
    <h2>Ici vous pouvez modifier vos infromations professionnels</h2>

    <table class="table">
        <tbody>
            <tr>
                <th> Nom</th>
                <td>{{ user.nom}}</td>
            </tr>
            <tr>
                <th> Prénom</th>
                <td>{{ user.prenom}}</td>
            </tr>
            <tr>
                <th> Adresse</th>
                <td>{{ user.adresse}}</td>
            </tr>
            <tr>
                <th> Telephone</th>
                <td>{{ user.telephone}}</td>
            </tr>
            <tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th> Numero du client</th>
                <td>{{ user.id }}</td>
            </tr>
            {% else %}
            <th>Mon numero client</th>
                <td>{{ user.id }}</td>
            {% endif %}
                
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {# {% if is_granted('ROLE_ADMIN') %} #}
            <tr>
                <th>Vous etes un </th>
                <td class="red">
                {% if app.user.roles == "ROLE_USER" %}
                PARTICULIER 
                {% elseif app.user.roles == "ROLE_ADMIN" %}
                ADMIN
                {% elseif app.user.roles == "ROLE_CLIENT" %}
                CLIENT
                {% endif %}
                {# {{ user.roles ? user.roles|json_encode : '' }} #}
                {# {% endif %} #}
                </td>
                
            </tr>
            {# {% endif %} #}
            
            
            
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('user_index') }}">Retour aux utilisateurs</a>
    {% else %}
    <a class="btn btn-primary" href="{{ path('accueil') }}">Retour à l'accueil</a>
    {% endif %}

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
