{% extends "buldi.html.twig" %}
{% block body %}
<!DOCTYPE html>

<title>User</title>
    <h1>Utilisateur {{ user.prenom}} {{ user.nom}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numero client</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {% endif %}
            
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('user_index') }}">Retour aux utilisateurs</a>
    {% else %}
    <a class="btn btn-primary" href="{{ path('accueil') }}">Retour Ã  l'accueil</a>
    {% endif %}

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
    {% if is_granted('ROLE_ADMIN') %}
    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
