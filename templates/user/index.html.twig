{% extends "buldi.html.twig" %}

{% block body %}

<!DOCTYPE html>

<title>User index</title>
    <h1>Liste des utilisateurs</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Nom d'utilisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.userName }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('user_show', {'id': user.id}) }}">Afficher</a>
                    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucuns utilisateurs</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
{% endblock %}
