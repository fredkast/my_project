{% extends "buldi.html.twig" %}


{% block body %}
{% if is_granted('ROLE_ADMIN') %}
    <h1>Devis</h1>
    {% else %}
    <h1>Votre devis a bien été enregistré</h1>
    <h2>Vous serez recontactez par nos services!</h2>
{% endif %}

    
   

    <table class="table">
        <tbody>
        <tr>
                <th>Auteur du devis</th>
                <td>{{ devi.user}} {{ devi.user.prenom }} / <b>Utilisateur n° :</b> {{ devi.user.id }}</td>
            </tr>
            <tr>
                <th>Référence du devis</th>
                <td>{{ devi.id }}</td>
            </tr>
            <tr>
                <th>Type de maison</th>
                <td>{{ devi.typeMaison }}</td>
            </tr>
            <tr>
                <th>Usage</th>
                <td>{{ devi.typeUsage }}</td>
            </tr>
            <tr>
                <th>Surface en m2</th>
                <td>{{ devi.surface }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ devi.budget }}</td>
            </tr>
            <tr>
                <th>Nombre d'étages</th>
                <td>{{ devi.etages }}</td>
            </tr>
            <tr>
                <th>Nombre de chambres</th>
                <td>{{ devi.chambres }}</td>
            </tr>
            <tr>
                <th>Garage</th>
                <td>{{ devi.garage ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Amenagment d'exterieur</th>
                <td>{{ devi.exterieur ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
     <p>Vous pouvez modifier ou le supprimer le devis</p>
    <div class="action">
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('devis_index') }}">Retour aux devis</a>
        {% endif %}
        {% if is_granted('ROLE_USER') %}
            <a class="btn btn-primary" href="{{ path('accueil') }}">Retour a l'accueil</a>
        {% endif %}
        <a class="btn btn-warning" href="{{ path('devis_edit', {'id': devi.id}) }}">Modifier</a>
        <a id="print" class="btn btn-md btn-dark" href="javascript:window.print()">Imprimer mon devis</a>		
        {{ include('devis/_delete_form.html.twig') }}
    </div>
{% endblock %}
