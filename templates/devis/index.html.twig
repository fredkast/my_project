
{% extends "buldi.html.twig" %}

{% block body %}
<!DOCTYPE html>
    <h1>Devis en cours</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Numero du devis </th>
                <th>Auteur </th>
                <th>Localisation</th>
